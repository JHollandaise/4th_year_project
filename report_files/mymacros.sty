\usepackage{graphicx}
\newcommand{\addfigure}[4]{
    \begin{figure}
        \centering
        \includegraphics[width=#1\textwidth]{#2}
        \caption{#3}
        \label{#4}
    \end{figure}
}
\newcommand{\addfigured}[4]{
    \begin{figure}
        \centering
        \includegraphics[width=#1\textwidth,draft=true]{#2}
        \caption{#3}
        \label{#4}
    \end{figure}
}